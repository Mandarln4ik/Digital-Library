<Window x:Class="Digital_Library.AddDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Library"
        mc:Ignorable="d"
        Title="AddDocumentWindow" Height="700" MinWidth="500" MaxWidth="1000" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>


    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                       Text="Добавить документ" FontWeight="SemiBold" FontSize="24"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                

                <TextBlock Text="Название:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="TitleBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Альтернативное Название:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="AlternativeTitleBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Описание:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="DescriptionBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                            HorizontalAlignment="Center" Height="30">
                    <CheckBox Name="ISBN" Content="ISBN" Margin="5" VerticalAlignment="Center"/>
                    <CheckBox Name="ISSN" Content="ISSN" Margin="5" VerticalAlignment="Center"/>
                    <CheckBox Name="BBK" Content="BBK" Margin="5" VerticalAlignment="Center"/>
                    <CheckBox Name="UDC" Content="UDC" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="5" Visibility="{Binding ElementName=ISBN, Path=IsChecked, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="ISBN:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="ISBNBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="6" Visibility="{Binding ElementName=ISSN, Path=IsChecked, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="ISSN:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="ISSNBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="7" Visibility="{Binding ElementName=BBK, Path=IsChecked, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="BBK:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="BBKBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="8" Visibility="{Binding ElementName=UDC, Path=IsChecked, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="UDC:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="UDCBox" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Год выпуска:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="YearPublicationBox" Grid.Column="1" Margin="10" TextWrapping="WrapWithOverflow"/>

                <TextBlock Grid.Column="2" Text="Всего страниц:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox x:Name="TotalPagesBox" Grid.Column="3" Margin="10" TextWrapping="WrapWithOverflow"/>
            </Grid>

            <Grid Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Язык:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <ComboBox x:Name="LanguageComboBox" Grid.Column="1" Margin="10"/>

                <TextBlock Grid.Column="2" Text="Автор:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <ComboBox x:Name="AuthorComboBox" Grid.Column="3" Margin="10"/>
            </Grid>

            <Grid Grid.Row="11">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Теги" Margin="25,5,0,5" FontSize="20" FontWeight="SemiBold"/>
                    <Button Content="добавить тег" Height="30" HorizontalAlignment="Left"
                            Padding="5" Grid.Column="1" Margin="25,0,0,0"
                            Click="Button_Click"/>
                </Grid>
                
                <WrapPanel Grid.Row="1">
                    
                    
                </WrapPanel>

                <ItemsControl  Grid.Row="1" Grid.ColumnSpan="2"
                               ItemsSource="{Binding appliedTags}"
                               x:Name="TagsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" BorderBrush="Black" CornerRadius="10"
                                    Padding="5" Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding TagName}" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" VerticalAlignment="Center"
                    BorderThickness="0" Background="Transparent" Margin="5,0,0,0"
                                            Click="RemoveTag" CommandParameter="{Binding}">
                                        <Image Source="pack://Application:,,,/icons/remove.png"
                       Width="20"/>
                                    </Button>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Button Grid.Row="12" Margin="0,25,0,0"
                    Width="200" Content="Добавить документ" FontSize="18"
                    Padding="5" FontWeight="SemiBold"
                    Click="AddDocument_Click"/>
        </Grid>
    </ScrollViewer>
</Window>
