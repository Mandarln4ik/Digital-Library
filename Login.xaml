<Window x:Name="window" x:Class="Digital_Library.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Library"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Height="600" Width="400"
        MinHeight="400" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Margin="10" HorizontalAlignment="Right" Source="pack://application:,,,/icons/user.png"/>
                <Label HorizontalAlignment="Left" VerticalContentAlignment="Center" 
                       HorizontalContentAlignment="Center" FontSize="32">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Content" Value="Вход"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Tag, ElementName=window}" Value="false">
                                    <Setter Property="Content" Value="Регистрация"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="20,0,20,0"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label x:Name="ErrorLabel" Content="Поле для ввода не может быть пустым" Foreground="Red"
                       />
                <Grid Width="300" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label FontSize="14">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="Content" Value="Логин/email:"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Tag, ElementName=window}" Value="false">
                                        <Setter Property="Content" Value="Логин:"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                    <TextBox x:Name="LoginTextBox" Grid.Column="1" Margin="15, 0, 0, 0" FontSize="18" 
         BorderThickness="0,0,0,1" AcceptsTab="False"/>
                </Grid>

                <Grid Width="300" Margin="0,20,0,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Tag, ElementName=window}" Value="false">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Почта:" FontSize="14"/>
                    <TextBox x:Name="EmailTextBox" Grid.Column="1" Margin="15, 0, 0, 0" FontSize="18" 
BorderThickness="0,0,0,1" AcceptsTab="False"/>
                </Grid>

                <Grid Width="300" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Пароль:" FontSize="14"/>
                    <TextBox x:Name="PasswordTextBox" Grid.Column="1" Margin="15, 0, 0, 0" FontSize="18" 
BorderThickness="0,0,0,1" AcceptsTab="False"/>
                </Grid>


                <Button Height="40" Margin="0,50,0,0"
                        Background="LightBlue" Click="Button_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="Войти"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Tag, ElementName=window}" Value="false">
                                    <Setter Property="Content" Value="Зарегистрироваться"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="10"
                       Foreground="Blue" TextDecorations="Underline" MouseDown="TextBlock_MouseDown">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Создать новую учетную запись"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Tag, ElementName=window}" Value="false">
                                    <Setter Property="Text" Value="Войти в аккаунт"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>

        
        
    </Grid>



    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Title" Value="Вход"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Tag, ElementName=window}" Value="false">
                    <Setter Property="Title" Value="Регистрация"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
</Window>
